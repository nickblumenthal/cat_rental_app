<table>
  <tr>
    <th>Name</th>
    <th>Age</th>
    <th>Color</th>
    <th>Sex</th>
    <th>Description</th>
    <th>Owner</th>
  </tr>
  <tr>
    <td><%= @cat.name %></td>
    <td><%= @cat.age %></td>
    <td><%= @cat.color %></td>
    <td><%= @cat.sex %></td>
    <td><%= @cat.description %></td>
    <td><%= @cat.owner.user_name %></td>
  </tr>
</table>

<table>
  <tr>
    <th>Start Date</th>
    <th>End Date</th>
    <th>Requester</th>
    <th>Status</th>
  <tr>
  <% @cat.rental_requests.each do |request| %>
  <tr>
    <td><%= request.start_date %></td>
    <td><%= request.end_date %></td>
    <td><%= request.requester.user_name %></td>
    <td><%= request.status %></td>
    <% if request.status == "PENDING" && current_user.id == request.owner.id %>
      <td><%= button_to("Approve", approve_url(request)) %></td>
      <td><%= button_to("Deny", deny_url(request)) %></td>
    <% end %>
  </tr>
  <% end %>
</table>
