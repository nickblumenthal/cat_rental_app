<form action="/cat_rental_requests" method = "post">
  <label for="cat_id">Cat</label>
  <select name="cat_rental_request[cat_id]" id="cat_id">
    <option></option>
    <% @all_cats.each do |cat| %>
      <% selected = @request.cat_id == cat.id %>
      <option value="<%= cat.id %>" <%= selected ? "selected" : "" %> >
        <%= cat.name %>
      </option>
    <% end %>
  </select>
  <input type="date" name="cat_rental_request[start_date]" value = "<%= @request.start_date %>">
  <input type="date" name="cat_rental_request[end_date]" value = "<%= @request.end_date %>">
  <input type="submit" value="Submit Request">
  <input type="hidden"
  name="authenticity_token"
  value="<%= form_authenticity_token %>">
</form>
